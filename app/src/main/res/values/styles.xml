<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.InitialText">
        <item name="android:textColor">@color/overlay_light_90</item>
    </style>

    <style name="bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="date" parent="bold">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="heading" parent="bold">
        <item name="android:textColor">@color/grey_1000</item>
    </style>

    <style name="name" parent="heading">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="email" parent="heading">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="content">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>